<div class="container">
	<div class="row">
<% @books.each do |book| %>
		<div class="col-md-9 col-md-offset-1 well">
		   <div class="row">
			<div class="col-md-1">	
			<div class="img-responsive"><%= image_tag book.asset.url(:medium) %></div>
			</div>
			<div class="col-md-8 col-md-offset-2">
				<div class="col-md-12">
					<h3><%= link_to book.name, controller: "books", action: "show", id: book.id%></h3>
				</div>
				<div class="col-md-12 pull-left">
					<ul class="list-group">
					  <li class="list-group-item">Author:<%= book.author %> </li>
					  <li class="list-group-item">ISBN: <%= book.isbn %></li>
					  <li class="list-group-item">Book Rating: <%= book.book_rating %></li>					 
					</ul>					  				
				
				</div>				
				<div class="col-md-1 ">
					<button class="btn btn-primary">Buy at Rs.<%= book.mrp-book.discount %></button>
				</div>
			</div>			
		    </div>
		</div>
<% end%>
	</div>
</div>

