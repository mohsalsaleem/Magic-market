<h1 class="danger">Books Search</h1>
 
<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>
 
<ul>
  <% @books.each do |book| %>
    <li>
      <h3>
        <%= link_to book.name, controller: "books", action: "show", id: book._id%>
      </h3>
    </li>
  <% end %>
</ul>
