<div class="container">
  <div class = "row">
  <% @delivery_addresses.each do |delivery_address| %>
    <div class="col-md-4">
      <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Use the existing address?</h3>
      </div>
      <div class="panel-body">
        <table>

        <tr> <th> <%= delivery_address.name %> </th></tr>
        <tr> <th> <%= delivery_address.address %> </th> </tr>
        <tr> <th> <%= delivery_address.city %> </th> </tr>
        <tr> <th> <%= delivery_address.state %> </th> </tr>
        <tr> <th> <%= delivery_address.pincode %> </th></tr>
        </table>
      </div>
      <div class="panel-footer"><%= button_to 'Choose this address ?', set_address_path(id: delivery_address.id), method: :post ,class: 'btn btn-primary'%></div>
    </div>
    </div>
    <% end %>
    <div class= "col-md-2">
      <h2 class="pull-right">Or</h2>
    </div>
    <div class = "col-md-4 col-md-offset-2">
      <div class="top-buffer"></div>
      <button class="btn btn-primary btn-block"><%= link_to 'New Delivery address', new_delivery_address_path %></button>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<h1>Listing Delivery Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th>Phoneno</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivery_addresses.each do |delivery_address| %>
      <tr>
        <td><%= delivery_address.name %></td>
        <td><%= delivery_address.address %></td>
        <td><%= delivery_address.city %></td>
        <td><%= delivery_address.state %></td>
        <td><%= delivery_address.pincode %></td>
        <td><%= delivery_address.phoneno %></td>
        <td><%= delivery_address.user %></td>
	<td><%= button_to 'Choose this address ?', set_address_path(id: delivery_address.id), method: :post %>
        <td><%= link_to 'Show', delivery_address %></td>
        <td><%= link_to 'Edit', edit_delivery_address_path(delivery_address) %></td>
        <td><%= link_to 'Destroy', delivery_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

